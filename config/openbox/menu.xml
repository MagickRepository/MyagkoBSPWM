<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">

 
    <separator label="Menu" />

            <item label="Launch apps">
            <action name="Execute">
                <command>rofi -show run</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

            <item label="Terminal">
            <action name="Execute">
                <command>alacritty</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

            <item label="File manager">
            <action name="Execute">
                <command>thunar</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

            <item label="Web browser">
            <action name="Execute">
                <command>google-chrome-stable</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>


<menu id="apps-Mult-menu" label="Settings">

    <separator label="Appearance" />

        <item label="lxappearance">
            <action name="Execute">
                <command>lxappearance</command>
            </action>
        </item>

        <item label="obconf">
            <action name="Execute">
                <command>obconf</command>
            </action>
        </item>

        <item label="nitrogen">
            <action name="Execute">
                <command>nitrogen</command>
            </action>
        </item>

    <separator label="Sound" />

        <item label="pavucontrol">
            <action name="Execute">
                <command>pavucontrol</command>
            </action>
        </item>

    <separator />

        <item label="Reconfigure OpenBox">
            <action name="Execute">
                <command>openbox --reconfigure</command>
            </action>
        </item>

     </menu>


  <separator />

            <item label="Power menu">
            <action name="Execute">
                <command>~/.config/rofi/powermenu</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>

</openbox_menu>